#ifndef CHARACTER_H
#define CHARACTER_H

#include "raylib.h"

class Character{
 private:
  Rectangle body;
  float speed{300};
  float x;
  float y;
  const char * name;
  Camera2D camera;
  bool CameraFocus{true};
  
 public:
  Character(Rectangle Body, const char * name);

  void setSpeed(float newSpeed);
  void draw();
  float getX();
  float getY();
  
  
};

#endif //CHARACTER_H
